<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente"
    android:background="@color/white">


    <EditText
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="96dp"
        android:autofillHints="@string/user"
        android:background="@drawable/corner_field"
        android:fontFamily="@font/nunito"
        android:hint="  Nombre"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="348dp"
        android:background="@color/blue_clear"
        android:text=" Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/N_telefono"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="256dp"
        android:autofillHints="@string/user"
        android:background="@drawable/corner_field"
        android:fontFamily="@font/nunito"
        android:hint="  Telefono"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/N_documento"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="180dp"
        android:autofillHints="@string/user"
        android:background="@drawable/corner_field"
        android:fontFamily="@font/nunito"
        android:hint="  Documento"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_dark"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Agregar Cliente"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>