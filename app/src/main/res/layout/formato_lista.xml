<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="420dp"
        android:layout_height="53dp"
        android:background="@drawable/color_recyclerview"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="434dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tex_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/layout"
                    android:text="AzÃºcar"
                    android:textColor="#040404"
                    android:textSize="20dp"
                    android:typeface="serif">


                </TextView>

            </LinearLayout>



            <TextView
                android:id="@+id/tex_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/layout"

                android:textColor="#040404"
                android:textSize="20dp"
                android:typeface="serif" />


            <LinearLayout
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/layout"
                        android:text="ID:"
                        android:textColor="#FD0505"
                        android:textSize="15dp"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/tex_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/layout"
                        android:text="001"
                        android:textColor="#040404"
                        android:textSize="15dp"
                        android:typeface="serif" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/layout"
                        android:text="$"
                        android:textColor="#167516"
                        android:textSize="20dp"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/tex_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/layout"
                        android:text="5.000"
                        android:textColor="#040404"
                        android:textSize="20dp"
                        android:typeface="serif" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>